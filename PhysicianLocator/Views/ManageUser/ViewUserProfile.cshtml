    </div>

    int userid = Convert.ToInt32(Session["UserID"]);

    if (userid != 0)
    {

        if (Session["UserName"] != null)
        {
            <div class="col-md-12 martop20">
                @Html.ActionLink("Edit Profile", "EditUserProfile", "ManageUser", new { @Id = Url.RequestContext.RouteData.Values["id"] }, new { @class = "btn btn-info pull-right" })
            </div>
        }
    }
}

