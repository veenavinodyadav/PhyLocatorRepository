                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.Street3)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel2.Street3)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.City)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel2.City)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.State)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel2.State)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.CountryId)</td>
                                <td>@Html.DisplayFor(model => model.CountryName2)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.Zipcode)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel2.Zipcode)</td>
                            </tr>
