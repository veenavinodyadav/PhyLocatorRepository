@model PhysicianLocator.Models.AdminUserRegViewModel

<h2> View Profile</h2>
@using (Html.BeginForm("EditUserProfile", "ManageUser", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Personal Information</a></li>
        <li><a data-toggle="tab" href="#menu1">Address</a></li>
        <li><a data-toggle="tab" href="#menu2">Education</a></li>
        <li><a data-toggle="tab" href="#menu3">Experience</a></li>
        <li><a data-toggle="tab" href="#menu4">Health History</a></li>
      
    </ul>

    <div class="form-horizontal">
        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                <div class="col-md-2 martop20">
                    <img src="@Url.Content(@ViewBag.contentpath)" class="img-responsive img-circle" style="background: #999; padding: 2px;" />
                </div>
                <div class="col-md-10">
                    <table class="table martop20">
                        <tbody>

                            <tr>
                                <td width="200">@Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "" })</td>
                                <td>
                                    <div>
                                        @Html.DisplayFor(model => model.FirstName, new { htmlAttributes = new { @class = "" } })
                                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "" })</td>
                                <td>
                                    <div>
                                        @Html.DisplayFor(model => model.LastName, new { htmlAttributes = new { @class = "" } })
                                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.DateOfBirth, htmlAttributes: new { @class = "" })</td>
                                <td>
                                    <div>
                                        @Html.DisplayFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "" } })
                                        @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.CellPhone, htmlAttributes: new { @class = "" })</td>
                                <td>
                                    <div>
                                        @Html.DisplayFor(model => model.CellPhone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.CellPhone, "", new { @class = "text-danger" })
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-md-6"></div>              
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })               
            </div>

            <div id="menu1" class="tab-pane fade">

                <div class="col-md-6">
                    <h3>Primary Address</h3>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel1.Street1)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel1.Street1)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel1.Street2)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel1.Street2)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel1.Street3)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel1.Street3)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel1.City)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel1.City)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel1.State)</td>
