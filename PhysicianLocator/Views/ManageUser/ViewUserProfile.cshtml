                            var result = "";

                            return (+d.getUTCMonth() + '-' + d.getUTCDay() + '-' + d.getFullYear());
                        }
                    },
                    
                    ]
            })

        })
        //end expereince jquery
        //start Health jquery
        $(document).ready(function () {
            var oTable = $('#myDatatable_HealthHistory').DataTable({
                "bPaginate": true,
                "bLengthChange": false,
