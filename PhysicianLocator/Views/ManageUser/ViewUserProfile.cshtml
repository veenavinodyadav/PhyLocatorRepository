                </div>
                <div class="col-md-6">
                    <h3>Secondary Address</h3>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.Street1)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel2.Street1)</td>
                            </tr>
                            <tr>
                                <td>@Html.LabelFor(model => model.AddressViewModel2.Street2)</td>
                                <td>@Html.DisplayFor(model => model.AddressViewModel2.Street2)</td>
