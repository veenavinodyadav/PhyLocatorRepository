@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <link href="~/Content/popModal.css" rel="stylesheet" />
    <script src="~/Scripts/popModal.js"></script>
    <script>

        function deleteEdu(id) {
            if (confirm('Are You Sure?')) {
                return window.location = "https:/LookUp/LkUpCountryDelete/" + id;
            } else {
                alert("You are not redirected.")
            }
        }

        $(document).ready(function () {

            var oTable = $('#myDatatable').DataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "ordering": false,
                "bInfo": false,
                "bAutoWidth": false,

                "ajax": {
                    "url": '/LookUp/LkUpCountryView',
                    "type" : "get",
                    "datatype" : "json"
                },
                "columns": [
                    { "data": "CountryName", "autoWidth": true },
                    {
                        "data": "CountryId", "autoWidth": true, "render": function (data) {
                            return '<a  class="popup btn" href="/LookUp/LkUpCountryEdit/' + data + '"><i class="fa fa-pencil"></i></a> <a class="popup btn" href="/LookUp/LkUpCountryDelete/' + data + '">  <i class="fa fa-trash"></i></a>';
                    }
                    },
                ]
            })


            $('.tablecontainer').on('click', 'a.popup', function (e) {
                e.preventDefault();
                OpenPopup($(this).attr('href'));
            })

            function OpenPopup(pageUrl) {
                var $pageContent = $('<div/>');
                $pageContent.load(pageUrl, function () {
                    $('#popupForm', $pageContent).removeData('validator');
                    $('#popupForm', $pageContent).removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form');
                });

                $dialog = $('<div class="popupWindow" style="overflow:auto height:auto"></div>')
                          .html($pageContent)
                          .dialog({
                              draggable : false,
                              autoOpen : false,
                              resizable : false,
                              model: true,

                              height : 550,
                              width : 600,
                              close: function () {
                                  $dialog.dialog('destroy').remove();
                              }
                          })

                $('.popupWindow').on('submit', '#popupForm', function (e) {
                    var url = $('#popupForm')[0].action;
                    $.ajax({
                        type : "POST",
                        url : url,
                        data: $('#popupForm').serialize(),
                        success: function (data) {
                            if (data.status) {
                                $dialog.dialog('close');
                                oTable.ajax.reload();
                            }
                        }
                    })

                    e.preventDefault();
                })

                $dialog.dialog('open');
            }
        })

        //for image change

        function uploadStarted() {
            $get("imgDisplay").style.display = "none";
        }

        $(function () {
            $("form").kendoValidator();
        });
    </script>

}

