<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Physician Locator</title>

    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" />
    @Mvc.RazorTools.BundleManager.Styles.Render()
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/kendo/css")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/kendo")
    @Styles.Render("~/Content/font-awesome")
    @RenderSection("css", false)

    @*<script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>*@
</head>
<body class="">
    <div class="navbar navbar-fixed-top">
        <div class="">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Physician Locator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>

            @{int userid = Convert.ToInt32(Session["UserID"]);}

            @if (userid != 0)
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "QuestionAnswer")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")

                </div>

            }
            else
            {
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">

                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")

                </div>
            }

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            @* <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>*@
        </footer>
    </div>


    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery.easyPaginate.js"></script>
    <script src="~/Scripts/jquery.snippet.min.js"></script>
</body>
</html>